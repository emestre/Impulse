<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.impulse.android.TextReplyActivity">

    <ImageView
        android:id="@+id/reply_post_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="5dp"/>

    <EditText
        android:id="@+id/reply_text_field"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="5dp"
        android:layout_toRightOf="@+id/reply_post_thumb"
        android:textSize="@dimen/create_post_text_size"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="Write a message..."
        android:textColorHint="@color/create_post_text"
        android:background="#FFFFFFFF"
        android:gravity="top"/>

    <ImageButton
        android:id="@+id/reply_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/reply_post_thumb"
        android:background="@drawable/button_green"
        android:src="@drawable/reply_button_text"
        android:enabled="false"/>

</RelativeLayout>
