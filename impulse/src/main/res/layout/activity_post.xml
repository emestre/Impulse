<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/post_info"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/container_dropshadow"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/post_userpicture"
            android:layout_marginTop="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/post_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/post_userpicture"
            android:textSize="@dimen/post_text_size"/>

        <TextView
            android:id="@+id/post_timeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/post_text_size"/>

        <TextView
            android:id="@+id/post_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/post_userpicture"
            android:layout_below="@id/post_user"
            android:textSize="@dimen/post_text_size"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/post_timeout">

            <ImageView
                android:id="@+id/location_pin"
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:src="@drawable/image_location_pin"/>

            <TextView
                android:id="@+id/post_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/location_pin"
                android:textSize="@dimen/post_text_size"
                android:textColor="#006E8A"/>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:gravity="center"
        android:clipToPadding="false"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="45dp"
        android:paddingBottom="45dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/post_text_size"/>

        <ImageView
            android:id="@+id/caption_blurb"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/image_comment_blurb"/>

        <TextView
            android:id="@+id/post_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/caption_blurb"
            android:layout_toLeftOf="@id/button_like"
            android:textSize="@dimen/post_text_size"/>

    </RelativeLayout>


    <SlidingDrawer
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:content="@+id/content"
        android:handle="@+id/handle">

        <Button
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#bfbfbf"
            android:drawableLeft="@drawable/ic_caret_up"
            android:drawableRight="@drawable/ic_caret_up"/>

        <RelativeLayout
            android:id="@+id/content"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d1ebe8">

            <ImageView
                android:id="@+id/reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/image_reply"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/reply_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/camera_reply"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/image_camera_reply"/>

                <ImageView
                    android:id="@+id/video_reply"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/image_video_reply"/>

                <ImageView
                    android:id="@+id/message_reply"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/image_message_reply"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reply_widgets"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">

                <EditText
                    android:id="@+id/reply_editText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:layout_weight="80"
                    android:textSize="12sp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/reply_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="20"
                    android:text="Send"
                    android:textSize="12sp"
                    android:visibility="gone"/>

            </LinearLayout>

        </RelativeLayout>

    </SlidingDrawer>

</FrameLayout>