<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="OverlayText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="ImpulseShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.Impulse.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.Impulse.Detail</item>
        <item name="sv_backgroundColor">#99000000</item>
        <item name="sv_buttonText">OK</item>
    </style>

    <style name="ImpulseShowcaseViewCentered">
        <item name="sv_titleTextAppearance">@style/TextAppearance.Impulse.Title.Center</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.Impulse.Detail.Center</item>
        <item name="sv_backgroundColor">#99000000</item>
        <item name="sv_buttonText">OK</item>
    </style>

    <style name="TextAppearance.Impulse.Title" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#33B5E5</item>
    </style>

    <style name="TextAppearance.Impulse.Detail" parent="android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Impulse.Title.Center" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#33B5E5</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextAppearance.Impulse.Detail.Center" parent="android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
